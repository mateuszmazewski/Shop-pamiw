@model Shop.WebApp.Models.OrderItemVM
@{ProductVM Product = ViewBag.Product as ProductVM;}

<div>
    <h4>Błędna ilość</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            ID Produktu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            Nazwa Produktu
        </dt>
        <dd class="col-sm-10">
            @Product.Name
        </dd>
