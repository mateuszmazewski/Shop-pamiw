@model Shop.WebApp.Models.OrderVM
@using Shop.Core.Domain
@{List<OrderItemVM> OrderItemsList = ViewBag.OrderItemsList as List<OrderItemVM>;}

@{
    String UnitOfMeasurementName(UnitOfMeasurement uom)
    {
        switch (uom)
        {
            case UnitOfMeasurement.Pieces: return "szt.";
            case UnitOfMeasurement.Kilogram: return "kg";
            case UnitOfMeasurement.Meter: return "m";
            default: return "";
        }
    }
}

<div>
    <h4>OrderVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>
<a href="/OrderItem/Create/@Model.Id" class="btn btn-primary">Dodaj produkt</a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Produkt
            </th>
            <th>
                Cena
            </th>
            <th>
                Ilość
            </th>
            <th>
                Suma
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in OrderItemsList)
        {
            <tr>
                <td>
                    @orderItem.Product.Name
                </td>
                <td>
                    @orderItem.Product.Price zł
                </td>
                <td>
                    @orderItem.Quantity @UnitOfMeasurementName(orderItem.Product.UnitOfMeasurement)
                </td>
                <td>
                    @{
                        var sum = orderItem.Product.Price * orderItem.Quantity;
                        sum = Math.Round(sum, 2);
                    }
                    @sum zł
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "OrderItem", new { id = orderItem.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
